<%= form_with(model: course) do |form| %>
  <div class="fields">
    <%= form.label :name, '名稱' %>
    <%= form.text_field :name %>
  </div>

  <div class="fields">
    <%= form.label :price, '價格' %>
    <%= form.number_field :price %>
  </div>

  <div class="fields">
    <%= form.label :intro, '介紹' %>
    <%= form.text_area :intro %>
  </div>

  <div class="fields">
    <%= form.label :hour, '時數' %>
    <%= form.number_field :hour %>
  </div>

  <div class="actions">
    <%= form.submit btn_label %>
  </div> 

<% end %>