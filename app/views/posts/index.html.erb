<h1>文章列表</h1>
<%= link_to "新增文章", new_post_path %>

<table>
  <thead>
    <tr>
      <td>名稱</td>
      <td>內容</td>
      <td>開始</td>
      <td>結束</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do|post| %>
    <tr>
      <td><%= link_to post.title,post_path(post.id) %></td>
      <td><%= post.content %></td>
      <td><%= post.start_at %></td>
      <td><%= post.end_at %></td>
      <td><%= link_to "編輯文章", edit_post_path(post.id) %></td>
      <td><%= link_to "刪除文章", post_path(post.id), method: "delete", data: {confirm: "確認刪除"} %></td>
    </tr>
    <% end %> 
  </tbody>
</table>